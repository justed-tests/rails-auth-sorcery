<h1>Choose new password</h1>

<%= form_for @user, url: reset_password_path(@token), method: :path do %>
  <%= render '/shared/errors', object: @user %>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', requred: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control', requred: true %>
  </div>

  <%= submit_tag 'Set password', class: 'btn btn-primary btn-lg' %>
<% end %>
